<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Text Replace Tool</title>
</head>
<body>
    <h1>Text Replace Tool</h1>
    <label for="inputText">Input Text:</label><br>
    <textarea id="inputText" rows="4" cols="50"></textarea><br><br>

    <label for="findWord">Find Word:</label><br>
    <input type="text" id="findWord"><br><br>

    <label for="replaceWord">Replace With:</label><br>
    <input type="text" id="replaceWord"><br><br>

    <button onclick="replaceText()">Replace</button>

    <h2>Modified Text:</h2>
    <p id="outputText"></p>

    <script>
        function replaceText() {
            var inputText = document.getElementById('inputText').value;
            var findWord = document.getElementById('findWord').value;
            var replaceWord = document.getElementById('replaceWord').value;
            
            var modifiedText = inputText.replace(new RegExp(findWord, 'g'), replaceWord);
            
            document.getElementById('outputText').innerText = modifiedText;
        }
    </script>
</body>
</html>
