<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Remove Brackets Tool</title>
</head>
<body>
    <h1>Remove Brackets Tool</h1>
    <label for="inputText">Input Text:</label><br>
    <input type="text" id="inputText"><br><br>

    <button onclick="removeBrackets()">Submit</button>

    <h2>Output:</h2>
    <p id="outputText"></p>

    <script>
        function removeBrackets() {
            var inputText = document.getElementById('inputText').value;
            var modifiedText = inputText.replace(/\[\s*"(.*?)"\s*\]/g, '$1');
            document.getElementById('outputText').innerText = modifiedText;
        }
    </script>
</body>
</html>
